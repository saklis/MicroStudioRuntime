{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "build",
                "config=debug_x86"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "build",
                "config=release_x86"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
